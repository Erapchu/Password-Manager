<Window x:Class="PasswordManager.Windows.InputPassWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordManager.Windows"
        mc:Ignorable="d"
        Title="Password Window"
        WindowStartupLocation="CenterScreen" 
        ResizeMode="CanMinimize"
        Width="300"
        Height="200">
    <Grid>
        <StackPanel>
            <TextBlock 
                Text="Enter your password" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                FontSize="20" 
                Grid.Row="0"
                Margin="20"/>
            <TextBox 
                Grid.Row="1" 
                Margin="15 0" 
                Text="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock 
                Margin="0 10" 
                Text="{Binding Status}" 
                TextWrapping="Wrap" 
                HorizontalAlignment="Center" 
                MaxWidth="270"
                Visibility="{Binding StatusVisibility}"/>
            <StackPanel 
                Grid.Row="2" 
                Orientation="Horizontal" 
                VerticalAlignment="Bottom" 
                HorizontalAlignment="Right">
                <Button 
                    VerticalAlignment="Center" 
                    Width="75" 
                    Content="OK" 
                    Height="25" 
                    IsDefault="True"
                    Command="{Binding ContinueCommand}" 
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:InputPassWindow}}}"/>
                <Button 
                    VerticalAlignment="Center" 
                    Width="75" 
                    Margin="15" 
                    Content="Cancel" Height="25"
                    Command="{Binding ExitCommand}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
